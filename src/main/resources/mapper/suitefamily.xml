<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suitecare.suitecare">

    <!-- 회원가입 -->
    <insert id="createFamily" parameterType="com.suitecare.suitecare.entity.Family">
        insert into suitefamily
        values (#{suite_family_id}, #{password}, #{family_name}, #{family_gender}, #{family_birthday}, #{email}, #{tel},
                #{address}, #{address_detail}, #{sms_opt_in}, #{email_opt_in}, #{signup_date}, #{role})
    </insert>

    <!-- 로그인 -->
    <select id="login" parameterType="com.suitecare.suitecare.domain.LoginDTO">
        select * from suitefamily where suite_family_id = #{id} and password = #{password}
    </select>

</mapper>